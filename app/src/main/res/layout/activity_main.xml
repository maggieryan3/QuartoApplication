<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ryanmar19.quarto.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/surfaceView"
        android:background="#ffffff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:weightSum="1">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bigBlueHollowSquare"
            android:src="@drawable/blueHollowSquare"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bigBlueHollowCircle"
            android:src="@drawable/blueHollowCircle"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/smallBlueHollowSquare"
            android:src="@drawable/blueHollowSquare"
            android:baselineAlignBottom="false"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/smallBlueHollowCircle"
            android:src="@drawable/blueHollowCircle"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bigBlueSolidSquare"
            android:src="@drawable/blueSolidSquare"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/smallBlueSolidSquare"
            android:src="@drawable/blueSolidSquare"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bigBlueSolidCircle"
            android:src="@drawable/blueSolidCircle"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/smallBlueSolidCircle"
            android:src="@drawable/blueSolidCircle"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="bottom"
        android:background="#010101"
        android:baselineAligned="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Exit"
            android:id="@+id/exit" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="QUARTO"
            android:id="@+id/quarto"
            android:layout_marginLeft="275dp" />
    </LinearLayout>

</FrameLayout>
