<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ryanmar19.quarto.quarto.QuartoMainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <SurfaceView
        android:layout_width="match_parent"
        android:id="@+id/mainSurfaceView"
        android:background="#ffffff"
        android:layout_height="match_parent" />

    <SurfaceView
        android:layout_width="535dp"
        android:id="@+id/board"
        android:background="@drawable/gameboard"
        android:layout_height="535dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="535dp"
        android:layout_height="535dp"
        android:id="@+id/boardLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="80dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/boardRow1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b03"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b13"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b23"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b33"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_margin="18dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/boardRow2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b02"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b12"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b22"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b32"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/boardRow3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b01"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b11"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b21"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b31"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/boardRow4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b00"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b10"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b20"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/transparent"
                    android:id="@+id/b30"
                    android:layout_weight="1"
                    android:layout_margin="18dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <SurfaceView
        android:id="@+id/sideboard"
        android:layout_marginLeft="533dp"
        android:layout_width="match_parent"
        android:background="@drawable/sideboard"
        android:layout_height="535dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="533dp"
        android:id="@+id/sideboardLayout"
        android:paddingLeft="0dp"
        android:layout_height="535dp"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="650dp"
        android:id="@+id/userMessageLayout"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="60dp">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userMessage"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="92dp"
        android:id="@+id/row1Layout"
        android:weightSum="1"
        android:layout_width="250dp"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="650dp">

        <ImageView
            app:srcCompat="@drawable/blue_large_hollow_square"
            android:id="@+id/bluelargehollowsquare"
            android:layout_weight="0.17"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/blue_large_hollow_square" />

        <ImageView
            app:srcCompat="@drawable/blue_large_solid_square"
            android:id="@+id/bluelargefilledsquare"
            android:layout_weight="0.33"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/blue_large_solid_square" />

        <ImageView
            app:srcCompat="@drawable/blue_small_hollow_square"
            android:id="@+id/bluesmallhollowsquare"
            android:layout_weight="0.21"
            android:layout_marginTop="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/blue_small_hollow_square" />

        <ImageView
            app:srcCompat="@drawable/blue_small_solid_square"
            android:id="@+id/bluesmallfilledsquare"
            android:layout_weight="0.28"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/blue_small_solid_square"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:id="@+id/row2Layout"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="650dp"
        android:layout_weight="0.17"
        android:layout_height="92dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="61dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_large_hollow_square"
            android:id="@+id/yellowlargehollowsquare"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/yellow_large_hollow_square"
            android:background="@android:color/transparent" />

        <ImageView
            android:layout_width="69dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_large_solid_square"
            android:id="@+id/yellowlargefilledsquare"
            android:adjustViewBounds="true"
            android:src="@mipmap/yellow_large_solid_square" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_small_hollow_square"
            android:id="@+id/yellowsmallhollowsquare"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/yellow_small_hollow_square" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_small_solid_square"
            android:id="@+id/yellowsmallfilledsquare"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/yellow_small_solid_square"
            android:elevation="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="239dp"
        android:layout_height="92dp"
        android:id="@+id/row3Layout"
        android:layout_marginLeft="650dp"
        android:layout_marginTop="272dp">

        <ImageView
            android:layout_height="50dp"

            android:id="@+id/bluelargehollowcircle"
            android:layout_width="61dp"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/blue_large_hollow_circle"
            android:background="@color/green" />

        <ImageView
            android:layout_height="50dp"
            app:srcCompat="@drawable/blue_large_solid_circle"
            android:id="@+id/bluelargefilledcircle"
            android:layout_width="71dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/blue_large_solid_circle" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/blue_small_hollow_circle"
            android:id="@+id/bluesmallhollowcircle"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/blue_small_hollow_circle" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/blue_small_solid_circle"
            android:id="@+id/bluesmallfilledcircle"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/blue_small_solid_circle" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="239dp"
        android:layout_height="92dp"
        android:id="@+id/row4Layout"
        android:layout_marginTop="364dp"
        android:layout_marginLeft="650dp">

        <ImageView
            android:layout_width="61dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_large_hollow_circle"
            android:id="@+id/yellowlargehollowcircle"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/yellow_large_hollow_circle" />

        <ImageView
            android:layout_width="76dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_large_solid_circle"
            android:id="@+id/yellowlargefilledcircle"
            android:adjustViewBounds="true"
            android:src="@mipmap/yellow_large_solid_circle" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_small_hollow_circle"
            android:id="@+id/yellowsmallhollowcircle"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/yellow_small_hollow_circle" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_small_solid_circle"
            android:id="@+id/yellowsmallfilledcircle"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/yellow_small_solid_circle" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="#007777"
        android:baselineAligned="true"
        android:layout_height="170dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="QUARTO!"
            android:id="@+id/theQuartoButton"
            android:layout_marginLeft="410dp"
            android:elegantTextHeight="false"
            android:textSize="39sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#f1c232"
            android:background="#c5d789"
            android:shadowColor="#007777"
            android:layout_marginTop="20dp"
            android:textColorHighlight="#007777"
            android:textAlignment="center" />

    </LinearLayout>

</FrameLayout>
