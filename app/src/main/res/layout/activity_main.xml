<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ryanmar19.quarto.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/mainSurfaceView"
        android:background="#ffffff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:weightSum="1"
        android:id="@+id/mainSurfaceViewLayout">

    </LinearLayout>

    <SurfaceView
        android:layout_width="533dp"
        android:layout_height="460dp"
        android:id="@+id/board"
        android:background="@drawable/gameboard" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:weightSum="1">

        <CheckBox
            android:text="Finish Turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/turnCheckbox" />
    </LinearLayout>

    <SurfaceView
        android:id="@+id/sideboard"
        android:layout_marginLeft="533dp"
        android:layout_width="360dp"
        android:layout_height="460dp"
        android:background="@drawable/sideboard" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="364dp"
        android:layout_height="463dp"
        android:layout_marginLeft="533dp"
        android:id="@+id/sideboardLayout"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="595dp"
        android:id="@+id/userMessageLayout"
        android:layout_marginTop="10dp"
        android:layout_height="82dp"
        android:layout_width="239dp">

        <ToggleButton
            android:text="ToggleButton"
            android:id="@+id/userMessageButton"
            android:textOff="Place the piece!"
            android:textOn="Pick the piece!"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="215dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="239dp"
        android:layout_height="92dp"
        android:id="@+id/row1Layout"
        android:layout_marginLeft="595dp"
        android:layout_marginTop="92dp"
        android:weightSum="1">

        <ImageView
            app:srcCompat="@drawable/blue_large_hollow_square"
            android:id="@+id/bluelargehollowsquare"
            android:layout_weight="0.17"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            />

        <ImageView
            app:srcCompat="@drawable/blue_large_solid_square"
            android:id="@+id/bluelargefilledsquare"
            android:layout_weight="0.33"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            app:srcCompat="@drawable/blue_small_hollow_square"
            android:id="@+id/bluesmallhollowsquare"
            android:layout_weight="0.21"
            android:layout_marginTop="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/blue_small_solid_square"
            android:id="@+id/bluesmallfilledsquare"
            android:layout_weight="0.28"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="239dp"
        android:layout_height="92dp"
        android:id="@+id/row2Layout"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="593dp">

        <ImageView
            android:layout_width="61dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_large_hollow_square"
            android:id="@+id/yellowlargehollowsquare"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="69dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_large_solid_square"
            android:id="@+id/yellowlargefilledsquare" />

        <ImageView
            android:layout_width="52dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/yellow_small_hollow_square"
            android:id="@+id/yellowsmallhollowsquare"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/yellow_small_solid_square"
            android:id="@+id/yellowsmallfilledsquare"
            android:layout_weight="7.29"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="239dp"
        android:layout_height="92dp"
        android:id="@+id/row3Layout"
        android:layout_marginLeft="593dp"
        android:layout_marginTop="272dp">

        <ImageView
            android:layout_height="50dp"
            app:srcCompat="@drawable/blue_large_hollow_circle"
            android:id="@+id/bluelargehollowcircle"
            android:layout_width="61dp"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_height="50dp"
            app:srcCompat="@drawable/blue_large_solid_circle"
            android:id="@+id/bluelargefilledcircle"
            android:layout_width="71dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/blue_small_hollow_circle"
            android:id="@+id/bluesmallhollowcircle"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/blue_small_solid_circle"
            android:id="@+id/bluesmallfilledcircle"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="239dp"
        android:layout_height="92dp"
        android:id="@+id/row4Layout"
        android:layout_marginTop="364dp"
        android:layout_marginLeft="592dp">

        <ImageView
            android:layout_width="61dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_large_hollow_circle"
            android:id="@+id/yellowlargehollowcircle"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="76dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/yellow_large_solid_circle"
            android:id="@+id/yellowlargefilledcircle" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/yellow_small_hollow_circle"
            android:id="@+id/yellowsmallhollowcircle"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/yellow_small_solid_circle"
            android:id="@+id/yellowsmallfilledcircle"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="bottom"
        android:background="#007777"
        android:baselineAligned="true">

        <Button
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:text="Exit"
            android:id="@+id/exitButton"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:background="#c5d789"
            android:textColor="#f1c232"
            android:textStyle="bold"
            android:textSize="39dp"
            android:typeface="serif" />

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="QUARTO!"
            android:id="@+id/theQuartoButton"
            android:layout_marginLeft="200dp"
            android:elegantTextHeight="false"
            android:textSize="39sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#f1c232"
            android:background="#c5d789"
            android:shadowColor="#007777"
            android:layout_marginTop="20dp"
            android:textColorHighlight="#007777" />

    </LinearLayout>

</FrameLayout>
